  font-weight: 600;
  transition: all 0.3s ease;
  flex: 0 0 auto;
  min-width: 120px;
}

button:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 20px rgba(102, 126, 234, 0.4);
}

button:active {
  transform: translateY(0);
}

button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
}

.results {
  margin-top: 20px;
  animation: fadeIn 0.5s ease-in;
}

.hit {
  background: rgba(255, 255, 255, 0.03);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 12px;
  padding: 16px;
  margin: 12px 0;
  transition: all 0.3s ease;
  animation: fadeInUp 0.4s ease-out;
}

.hit:hover {
  background: rgba(255, 255, 255, 0.08);
  border-color: rgba(102, 126, 234, 0.5);
  transform: translateX(4px);
}

.hit-title {
  font-weight: 600;
  margin-bottom: 8px;
  color: #a78bfa;
  font-size: 1.1rem;
}

pre {
  background: rgba(0, 0, 0, 0.3);
  padding: 12px;
  border-radius: 8px;
  overflow: auto;
  border: 1px solid rgba(255, 255, 255, 0.1);
  color: #d0d0d0;
  font-size: 13px;
  line-height: 1.5;
}

footer {
  color: #888;
  font-size: 14px;
  margin-top: 48px;
  text-align: center;
  padding: 20px;
  border-top: 1px solid rgba(255, 255, 255, 0.1);
}

label {
  color: #b0b0b0;
  font-size: 14px;
  white-space: nowrap;
}

.loading {
  display: inline-block;
  width: 16px;
  height: 16px;
  border: 2px solid rgba(255, 255, 255, 0.3);
  border-top-color: #667eea;
  border-radius: 50%;
  animation: spin 0.8s linear infinite;
}

