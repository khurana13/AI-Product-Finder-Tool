}

input, select, button {
  padding: 12px 16px;
  border-radius: 8px;
  border: 1px solid rgba(255, 255, 255, 0.2);
  background: rgba(255, 255, 255, 0.08);
  color: #e0e0e0;
  font-size: 14px;
  transition: all 0.3s ease;
  flex: 1;
